
page {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	background-color: #f4f4f4;
}
.swiper-box {
	height: 400rpx;
}
.swiper-item {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	height: 100%;
	background: #eee;
	color: #fff;
}
.swiper-item image {
	width: 100%;
	height: 100%;
}
.bbs-card-wraper {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.bbs-card {
	position: relative;
	margin: 20rpx;
	background-color: #fff;
	border-radius: 6rpx;
	overflow: hidden;
}
.bbs-card .card-num-view {
	position: absolute;
	top: 20rpx;
	right: 20rpx;
	padding: 0 10rpx;
	background-color: #4CD964;
	color: #fff;
	font-size: 24rpx;
	border-radius: 4rpx;
}
.bbs-card image {
	width: 100%;
}
.card-bottom {
	padding: 10rpx;
}
.card-bottom .title {
	color: #2C405A;
	font-size: 32rpx;
}
.card-bottom .info-text {
	margin-right: 10rpx;
	color: #999999;
	font-size: 28rpx;
}
.article-cantent {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.article-cantent .img-pic {
	width: 240rpx;
	height: 180rpx;
}
.article-cantent .title {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	padding: 10rpx;
	color: #2C405A;
	font-size: 32rpx;
}
.article-cantent .img-pic image {
	width: 100%;
	height: 100%;
}

